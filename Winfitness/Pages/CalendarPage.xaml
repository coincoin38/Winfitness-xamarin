<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:local="clr-namespace:Winfitness;assembly=Winfitness"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	         x:Class="Winfitness.CalendarPage">
	<ListView 
		x:Name="daysListView"
		ItemsSource="{Binding WeekDays}"
		SelectedItem="{Binding SelectedDay, Mode=TwoWay}"
		RowHeight="60">
		<ListView.ItemTemplate>  
			<DataTemplate>  
				<ViewCell>  
						<Label Text="{Binding Name}" TextColor='Black' LineBreakMode="TailTruncation" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Font="Helvetica-bold" />  
				</ViewCell>  
			</DataTemplate>  
		</ListView.ItemTemplate>  
	</ListView>
</local:BaseContentPage>
